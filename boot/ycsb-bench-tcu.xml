<config>
    <mods>
        <mod name="fs" file="bench.img" />
    </mods>
    <kernel args="kernel" />
    <dom>
        <app args="root">
            <dom>
                <app args="m3fs mem" daemon="1">
                    <serv name="m3fs" />
                    <mod name="fs" />
                </app>
            </dom>
            <dom>
                <app args="pager maxcli=4" usermem="768M">
                    <sess name="m3fs" />
                    <mod name="fs" perm="r" />
                    <mod name="tilemux" perm="r" />
                    <tiles type="perf+nic|core" count="1" />
                    <tiles type="perf|core" count="2" />
                    <dom tile="perf|core">
                        <app args="/sbin/m3fs mem" daemon="1">
                            <serv lname="m3fs" gname="app_m3fs" />
                            <mod name="fs" />
                        </app>
                    </dom>
                    <dom tile="perf|core">
                        <app args="/bin/lvldbserver /tmp/foo 4 tcu">
                            <sess lname="m3fs" gname="app_m3fs" />
                            <rgate name="req" msgsize="2048" slots="1" />
                        </app>
                    </dom>
                    <dom tile="perf+nic|core">
                        <app args="/bin/ycsbclient tcu /data/small-workload.wl 4" daemon="1">
                            <sess lname="m3fs" gname="app_m3fs" />
                            <sgate name="req" />
                        </app>
                    </dom>
                </app>
            </dom>
        </app>
    </dom>
</config>
