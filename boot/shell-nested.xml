<config>
    <mods>
        <mod name="fs" file="default.img" />
    </mods>
    <kernel args="kernel" />
    <dom>
        <app args="root">
            <dom>
                <app args="m3fs mem" daemon="1">
                    <serv name="m3fs" />
                    <mod name="fs" />
                </app>
            </dom>
            <dom>
                <app args="pipes" daemon="1">
                    <serv name="pipes" />
                </app>
                <app args="vterm" daemon="1">
                    <serv name="vterm" />
                    <serial />
                </app>
            </dom>
            <dom>
                <app args="pager" usermem="512M" getinfo="1">
                    <sess name="m3fs" />
                    <mod name="fs" perm="r" />
                    <mod name="tilemux" perm="r" />
                    <sesscrt name="m3fs" count="24" />
                    <tiles type="core" count="1" />
                    <dom>
                        <app args="/sbin/pager" getinfo="1">
                            <sess name="m3fs" />
                            <mod name="fs" perm="r" />
                            <mod name="tilemux" perm="r" />
                            <tiles type="core" count="2" />
                            <dom>
                                <app args="/bin/shell ls -l" getinfo="1">
                                    <mount fs="m3fs" path="/" />
                                    <sess name="pipes" />
                                    <sess name="vterm" />
                                    <tiles type="core" count="2" />
                                    <tiles type="rot13" count="2" optional="1" />
                                </app>
                            </dom>
                            <dom>
                                <app args="/bin/filterchain 16384">
                                    <mount fs="m3fs" path="/" />
                                    <tiles type="core" count="2" />
                                </app>
                            </dom>
                        </app>
                    </dom>
                </app>
            </dom>
        </app>
    </dom>
</config>
